<com.example.aoa.custom.CustomFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha=".5"
    android:keepScreenOn="true"
    tools:context=".actions.alwayson.AlwaysOn">

    <com.example.aoa.actions.alwayson.AlwaysOnCustomView
        android:id="@+id/customView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/edge_glow_width"
        android:padding="?dialogPreferredPadding" />

    <com.example.aoa.custom.CustomImageView
        android:id="@+id/fingerprintIcn"
        android:layout_width="@dimen/aod_fingerprint_size"
        android:layout_height="@dimen/aod_fingerprint_size"
        android:layout_gravity="center_horizontal|bottom"
        android:contentDescription="@null"
        android:src="@drawable/ic_fingerprint_white"
        android:visibility="gone"/>
</com.example.aoa.custom.CustomFrameLayout>